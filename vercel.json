{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["public/**"] }
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "headers": { "cache-control": "max-age=31536000" },
      "dest": "/public/css/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
